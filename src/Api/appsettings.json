{
  "App": {
    "Title": "NetCa API",
    "Description": ".Net Clean Architecture Web Api Solution Template",
    "Version": "2.0.0",
    "UrlWeb": "https://app-dev.unitedtractors.com",
    "AppContact": {
      "Name": "PT United Tractors Tbk",
      "Email": "helpdesk.service@unitedtractors.com",
      "Uri": "https://www.unitedtractors.com"
    },
    "Namespace": "NetCa"
  },
  "IsEnableAuth": true,
  "IsEnableDetailError": false,
  "CorsOrigin": "https://*.unitedtractors.com",
  "Kestrel": {
    "KeepAliveTimeoutInM": 2,
    "MinRequestBodyDataRate": {
      "BytesPerSecond": 100,
      "GracePeriod": 10
    },
    "MinResponseDataRate": {
      "BytesPerSecond": 100,
      "GracePeriod": 10
    }
  },
  "ResiliencyPolicy": {
    "Bulkhead": {
      "Enabled": true,
      "MaxParallelization": 200,
      "MaxQueuingActions": 100
    },
    "CircuitBreaker": {
      "Enabled": true,
      "ExceptionAllowed": 10,
      "DurationOfBreak": 30
    },
    "RateLimit": {
      "Enabled": true,
      "NumberOfAllowedExecutions": 200,
      "DurationLimit": 1,
      "Burst": 30
    },
    "Timeout": {
      "Enabled": true,
      "Duration": 180
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;User ID=admin;Password=admin;Database=netca;Ssl Mode=Require;TrustServerCertificate=true;Pooling=true;MinPoolSize=1;MaxPoolSize=50;CommandTimeout=600;Timeout=200;"
  },
  "DatabaseSettings": {
    "MaxRetryDelay": 5,
    "MaxRetryCount": 5,
    "CommandTimeout": 60,
    "EnableAuditChangelog": true,
    "AuditState": [
      "Deleted"
    ],
    "Migrations": false,
    "SeedData": false
  },
  "Messaging": {
    "AzureEventHubs": [
      {
        "Name": "xxx",
        "ConnectionString": "Endpoint=sb://localhost/;SharedAccessKeyName=admin;SharedAccessKey=admin",
        "StorageAccount": "DefaultEndpointsProtocol=https;AccountName=admin;AccountKey=admin;EndpointSuffix=localhost",
        "BlobContainerName": "eventhub",
        "Topics": [
          {
            "Name": "xxx",
            "GroupName": "xxx",
            "Value": "xxx"
          }
        ]
      }
    ],
    "Configuration": {
      "MaximumRetries": 4,
      "Delay": 1000,
      "MaximumDelay": 30,
      "TryTimeout": 60,
      "SaveToDb": true,
      "MaxData": 300,
      "MessageToProcess": 25,
      "ProcessDelay": 30
    }
  },
  "Redis": {
    "Server": "localhost:6380",
    "InstanceName": "netca",
    "DatabaseNumber": 1,
    "ConnectRetry": 4,
    "ConnectTimeout": 60,
    "OperationTimeout": 60,
    "DeltaBackOff": 1000,
    "MaxDeltaBackOff": 30000,
    "DefaultExpiryInDays": 30,
    "RequestExpiryInMinutes": 30,
    "MessageExpiryInDays": 180,
    "Policy": []
  },
  "AuthorizationServer": {
    "Gateway": "https://apigateway-dev.unitedtractors.com/ucp/user-management",
    "Address": "https://dev-aks.unitedtractors.com:31863",
    "Header": "Ocp-Apim-Subscription-Key",
    "Secret": "xxx",
    "WhiteListPathSegment": "/swagger,/health,/redoc,/api/v1/apitoapi",
    "Service": "netca",
    "Policy": [],
    "Role": [
      {
        "Name": "Admin",
        "Group": [ "*" ]
      }
    ]
  },
  "BackgroundJob": {
    "IsEnable": true,
    "HostName": "local",
    "UsePersistentStore": false,
    "DefaultMaxRunTime": 10,
    "PersistentStore": {
      "ConnectionString": "Server=localhost;Port=5432;User ID=admin;Password=admin;Database=quartz;Ssl Mode=Require;TrustServerCertificate=true;Pooling=true;MinPoolSize=1;MaxPoolSize=50;CommandTimeout=600;Timeout=200;",
      "UseCluster": false,
      "IgnoreDuplicates": true,
      "OverWriteExistingData": true,
      "ScheduleTriggerRelativeToReplacedTrigger": true,
      "MaxConcurrency": 10,
      "RetryInterval": 15,
      "CheckInInterval": 15000,
      "CheckInMisfireThreshold": 15000,
      "MisfireThreshold": 15000,
      "TablePrefix": "QRTZ_"
    },
    "Jobs": [
      {
        "Name": "CacheTeamsJob",
        "IsParallel": true,
        "IsEnable": true,
        "Schedule": "0 0 */6 ? * *",
        "IgnoreMisfire": true,
        "Description": "Clear CacheTeams"
      },
      {
        "Name": "ProducerDbJob",
        "IsParallel": false,
        "IsEnable": true,
        "Schedule": "*/30 * * * * ?",
        "IgnoreMisfire": true,
        "Description": "Produce Message From Db Job"
      },
      {
        "Name": "ProducerRedisJob",
        "IsParallel": true,
        "IsEnable": true,
        "Schedule": "*/30 * * * * ?",
        "IgnoreMisfire": true,
        "Description": "Produce Message From Redis Job"
      },
      {
        "Name": "ConsumerDbJob",
        "IsParallel": false,
        "IsEnable": true,
        "Schedule": "0 */1 * * * ?",
        "IgnoreMisfire": true,
        "Description": "Consume Message From Db Job",
        "Parameters": [
        ]
      },
      {
        "Name": "ConsumerRedisJob",
        "IsParallel": true,
        "IsEnable": true,
        "Schedule": "*/30 * * * * ?",
        "IgnoreMisfire": true,
        "Description": "Consume Message From Redis Job",
        "Parameters": [
        ]
      },
      {
        "Name": "DeleteChangelogJob",
        "IsParallel": false,
        "IsEnable": true,
        "Schedule": "0 0 2 * * ?",
        "IgnoreMisfire": true,
        "Description": "Delete Changelog Job"
      }
    ]
  },
  "DataLifetime": {
    "Changelog": 180
  },
  "Bot": {
    "IsEnable": false,
    "ServiceName": "NetCa",
    "ServiceDomain": "netca.dev-aks.unitedtractors.com",
    "Address": "https://apigateway-dev.unitedtractors.com/dad/msteam",
    "Header": "Ocp-Apim-Subscription-Key",
    "Secret": "xxx",
    "CacheMsTeam": {
      "Counter": 100
    }
  },
  "ServerApi": {
  },
  "AllowedHosts": "*",
  "ApplicationInsights": {
    "InstrumentationKey": "xxx"
  },
  "Logging": {
    "LogLevel": {
      "Default": "None",
      "Microsoft": "None",
      "Microsoft.Hosting.Lifetime": "None"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss zzz}] {Level:u} {MethodFullName}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}